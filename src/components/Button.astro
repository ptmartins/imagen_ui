---
const {type, variant, state, size, txt} = Astro.props;
let btnClass = 'btn';

switch(type) {
    case 'primary':
        btnClass += ' btn--primary';
        break;
    case 'danger':
        btnClass += ' btn--danger';
        break;
    case 'success':
        btnClass += ' btn--success';
        break;
    case 'warning':
        btnClass += ' btn--warning';
        break;
    case 'mini':
        btnClass += ' btn--mini';
        break;
    default:
        btnClass += '';
        break;
}

state === 'disabled' ? btnClass += ' btn--disabled' : '';
variant === 'outlined' ? btnClass += ' btn--outlined' : '';
size === 'mini' ? btnClass += ' btn--mini' : '';
---

<button class={`btn ${btnClass}`}> 
    <slot />
</button>

<style>

    .btn {
        --btn-radius: 4px;
        
        align-items: center;
        background-color: #333;
        border: 1px solid #333;
        border-radius: 6px;
        color: #fff;
        cursor: pointer;
        display: inline-flex;
        font-size: 1rem;
        gap: .375rem;
        margin-inline-end: .75rem;
        padding: .75rem 1.5rem;
        transition: all .2s ease;
    }

    .btn--outlined, 
    .btn--outlined.btn--primary,
    .btn--outlined.btn--danger,
    .btn--outlined.btn--success,
    .btn--outlined.btn--warning,
    .btn--outlined.btn--disabled {
        background-color: transparent;
        border-width: 2px;
        color: #333;
    }

    .btn--mini {
        font-size: 12px;
        padding: .5rem .75rem;
    }

    .btn:hover {
        background-color: #5a5a5a;
        border-color: #5a5a5a;
        opacity: .85;
    }

    .btn--outlined:hover {
        background-color: #333;
        border-color: #333;
        color: #fff;
        opacity: 1;
    }

    .btn--primary {
        background-color: #335ed7;
        border-color: #335ed7;
    }

    .btn--outlined.btn--primary {
        color: #335ed7;
    }

    .btn--primary:hover {
        background-color: #537ff7;
        border-color: #537ff7;
    }

    .btn--outlined.btn--primary:hover {
        background-color: #335ed7;
        border-color: #335ed7;
        color: #fff;
    }


    .btn--danger {
        background-color: #bb2d3b;
        border-color: #bb2d3b;
    }

    .btn--outlined.btn--danger {
        color: #bb2d3b;
    }

    .btn--danger:hover {
        background-color: #dc4352;
        border-color: #dc4352;
    }

    .btn--outlined.btn--danger:hover {
        background-color: #bb2d3b;
        border-color: #bb2d3b;
        color: #fff;
        opacity: 1;
    }

    .btn--success {
        background-color: #1a972f;
        border-color: #1a972f;
    }

    .btn--outlined.btn--success {
        color: #1a972f;
    }

    .btn--success:hover {
        background-color: #1bbb35;
        border-color: #1bbb35;
    }

    .btn--outlined.btn--success:hover {
        background-color: #1a972f;
        border-color: #1a972f;
        color: #fff;
    }

    .btn--warning {
        background-color: #f9ca2d;
        border-color: #f9ca2d;
        color: #000;
    }

    .btn--outlined.btn--warning {
        color: #f9ca2d;
    }

    .btn--warning:hover {
        background-color: #ffd856;
        border-color: #ffd856;
    }

    .btn--outlined.btn--warning:hover {
        background-color: #f9ca2d;
        border-color: #f9ca2d;
        color: #333;
        opacity: 1;
    }

    .btn--disabled {
        cursor: initial;
        opacity: .35;
        pointer-events: none;
    }

    .btn:nth-of-type(1) {
        margin-inline-start: 0;
    }

    .btn svg {
        font-size: 1.1rem;
        margin-inline-start: .75rem;
    }

</style>