---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Imagen UI">
	<div class="innner-wrapper">  
		<div class="nav">
			<a href="/buttons" class="nav__item u-link">Buttons</a>
			<a href="/alerts" class="nav__item u-link">Alerts</a>
			<a href="/accordions" class="nav__item u-link">Accordions</a>
		</div>
	</div>
</Layout>

<style lang="less">

	.nav {
		display: grid;
		gap: .75rem;
		grid-template-columns: repeat(8, 1fr);
	}
	
	.nav__item {
		border: 2px solid var(--font-color);
		border-radius: 6px;
		display: inline-block;
		min-width: 100px;
		padding: .75rem;
		text-align: center;
		transition: all .2s ease;

		&:hover {
			background-color: var(--font-color);
			color: #fff;
		}
	}

</style>
